#include <cs50.h>
#include <stdio.h>

int main(void)
{
  // int n = get_in
for(int i=1;i<=4;i++){

// print pattern 1st
 for(int k=4;k>=i;k--)
       {
        printf(" ");
       }

for(int j=1;j<=i;j++){
   printf("#");
        }

printf(" ");
 //print pattern 2nd   
for(int l=1;l<=i;l++){
        printf("#");
          }
//move to next line
printf("\n");    
    }
}
